<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- Стандартні правила Checkstyle -->
    <module name="TreeWalker">
<!--        <module name="JavadocMethod"/>-->
        <module name="EmptyBlock"/>
    </module>

    <!-- NewlineAtEndOfFile знаходиться безпосередньо всередині Checker -->
    <module name="NewlineAtEndOfFile"/>

    <!-- RegexpSingleline також може бути безпосередньо всередині Checker -->
    <module name="RegexpSingleline">
        <property name="format" value="\t"/>
        <property name="message" value="Tabs are not allowed"/>
    </module>
</module>
